<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<header>
    <%- include('../partials/header') %>
</header>
<body>
    <main>
        <h2 id="eventHead">UPCOMING EVENTS</h2>
        <p id="eventHead">Check out what's happening next!</p>
        <section>
            <table>
                <thead>
                    <tr>
                        <th>Event Name</th>
                        <th>Date</th>
                        <th>Location</th>
                        <th>Description</th>
                    </tr>
                </thead>
                <tbody>
                    <% events.forEach(event => { %>
                        <tr>
                            <td><%= event.name %></td>
                            <td><%= event.date %></td>
                            <td><%= event.location %></td>
                            <td><%= event.description %></td> 
                        </tr>
                        <% }); %>
                </tbody>
                </table>
                <br>
                <div class="eventsImageContainer">
                    <% events.forEach(event => { %>
                        
                        <div class="eventsImages">
                            
                            <p><strong><%= event.name %></strong></p>
                            <img id="eventsImage" src="<%= event.image %>" alt="<%= event.name %>">
                        </div>
                        <br>
                        
                    <% }) %>
                </div>

            </section>
    </main>
</body>
    <%- include('../partials/footer') %>
</html>

